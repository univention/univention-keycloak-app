[keycloak/admin/user]
Type = String
Required = True
Show = Install
ShowReadOnly = Settings
InitialValue = admin
Scope = outside
Description = Name of the initial admin user (password file is /etc/keycloak.secret)
Description[de] = Name of the initial admin user (password file is /etc/keycloak.secret)
Group = Administration
Group[de] = Administration

[keycloak/url/prefix]
Type = String
Required = True
Show = Install
ShowReadOnly = Settings
InitialValue = keycloak
Scope = outside
Description = Prefix for the URL (e.g. login.$FQDN)
Description[de] = Prefix for the URL (e.g. login.$FQDN)
Group = Administration
Group[de] = Administration

[keycloak/log/level]
Type = List
Required = True
Description = Keycloak log level
Show = Install, Settings
Values = ALL, DEBUG, ERROR, FATAL, INFO, OFF, TRACE, WARN
Labels = ALL, DEBUG, ERROR, FATAL, INFO, OFF, TRACE, WARN
InitialValue = INFO
Scope = outside
Group = Administration
Group[de] = Administration

[keycloak/java/opts]
Type = String
Required = True
Show = Install, Settings
InitialValue = -server
Scope = outside
Description = Java options for keycloak
Group = Administration
Group[de] = Administration

[keycloak/theme]
Type = String
Show = Install, Settings
InitialValue = @%@ucs/web/theme@%@
Scope = outside
Description = Name of the theme to be applied to the keycloak login interface. Example: "dark" or "light". A CSS file of the same name has to exist in the folder /usr/share/univention-web/themes/.
Group = Settings

[keycloak/server/sso/fqdn]
Type = String
Show = Install, Settings
InitialValue = ucs-sso-ng.@%@domainname@%@
Scope = outside
Description = Defines the fqdn of the identity provider of this UCS domain.

[keycloak/server/sso/certificate/generation]
Type = Bool
Required = True
Show = Install, Settings
InitialValue = true
Scope = outside
Description =  If this variable is set to 'true', the certificate for the fqdn of the identity provider (keycloak/server/sso/fqdn) is created automatically. (default: true)

[keycloak/server/sso/certificate/download]
Type = String
Required = True
InitialValue = true
Show = Install, Settings
Scope = outside
Description =  If this variable is set to 'true', the certificate for the fqdn of the identity provider (keycloak/server/sso/fqdn) is downloaded automatically. (default: true)

[keycloak/server/sso/autoregistration]
Type = Bool
Required = True
InitialValue = true
Show = Install, Settings
Scope = outside
Description = If this variable is set to 'true', this UCS system registers its IP address at the fqdn of the identity provider (keycloak/server/sso/fqdn). (default: true)

[keycloak/federation/remote/identifier]
Type = String
Required = True
Show = Install, Settings
InitialValue = univentionObjectIdentifier
Scope = outside, inside
Description = UDM property uniquely identifying IAM objects

[keycloak/federation/source/identifier]
Type = String
Required = True
Show = Install, Settings
InitialValue = univentionSourceIAM
Scope = outside, inside
Description = UDM property referencing the source IAM

[kc/db/url]
Type = String
Required = False
Show = Install, Settings
Scope = inside
Description = Database URI (e.g. jdbc:postgresql://dbhost/keycloak)

[kc/db/username]
Type = String
Required = False
Show = Install, Settings
Scope = inside
InitialValue = keycloak
Description = Database username. Default "keycloak"

[kc/db/kind]
Type = String
Required = False
Show = Install, Settings
Scope = inside,outside
InitialValue = postgres
Description = Database kind (e.g. postgres)

[kc/db/password]
Type = String
Required = False
Show = Install, Settings
Scope = inside
Description = Database password

[kc/db/xa]
Type = String
Required = False
Show = Install, Settings
Scope = inside, outside
InitialValue = false
Description = Database xa transactions flag (e.g true/false)

[kc/db/driver]
Type = String
Required = False
Show = Install, Settings
Scope = inside
Description = Database infinispan driver

[kc/db/ping/datatype]
Type = String
Required = False
Show = Install, Settings
Scope = inside
Description = Datatype for ping_data value in the database (Mariadb compatibility)
